<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EndGameActivity"
        android:background="@drawable/end_space_background">

    <TextView
            android:text="Results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:fontFamily="@font/myriadpro_regular"
            android:textSize="70sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="108dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTxt"
            android:text="Test"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="272dp"
            android:fontFamily="@font/berlin_sans_fb_demi_bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restartText"
            android:text="@string/restartBtnText"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:fontFamily="@font/berlin_sans_fb_demi_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="212dp"/>

    <Button
            android:text="Yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restartBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.217"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:textSize="40sp"
            android:background="@drawable/ripple"
            android:alpha="147.9"
            android:paddingHorizontal="9dp"/>

    <Button
            android:text="Quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quitBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.781"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:textSize="40sp"
            android:background="@drawable/ripple_end"
            tools:allowUndo="false"
            android:alpha="147.9"
            android:paddingHorizontal="9dp"/>

</android.support.constraint.ConstraintLayout>